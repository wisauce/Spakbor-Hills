<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="1024.0" prefWidth="1780.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sti.oop.controllers.MainMenuController">
   <children>
      <ImageView fitHeight="1024.0" fitWidth="1780.0" pickOnBounds="true" StackPane.alignment="CENTER">
         <image>
            <Image url="@../images/backgroundMainMenu.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="10.0" prefHeight="690.0" prefWidth="1261.0">
         <children>
            <ImageView fitHeight="600.0" fitWidth="710.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/titleSpakborHills.png" />
               </image>
            </ImageView>
            <!-- Stardew Valley Style Buttons -->
            <Button fx:id="btnNewGame" text="New Game" prefWidth="220" onAction="#handleNewGame" style="
                -fx-background-color: #3B7A57;
                -fx-text-fill: white;
                -fx-font-size: 18px;
                -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #2E5940;
                -fx-border-width: 2;
                -fx-padding: 10 20 10 20;
            ">
                <style>
                    .button:hover {
                        -fx-background-color: #000000;
                    }
                </style>
            </Button>

            <Button fx:id="btnHelp" text="Help" prefWidth="220" onAction="#handleHelp" style="
                -fx-background-color: #3B7A57;
                -fx-text-fill: white;
                -fx-font-size: 18px;
                -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #2E5940;
                -fx-border-width: 2;
                -fx-padding: 10 20 10 20;
            ">
                <style>
                    .button:hover {
                        -fx-background-color: #529E70;
                    }
                </style>
            </Button>

            <Button fx:id="btnCredits" text="Credits" prefWidth="220" onAction="#handleCredits" style="
                -fx-background-color: #3B7A57;
                -fx-text-fill: white;
                -fx-font-size: 18px;
                -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #2E5940;
                -fx-border-width: 2;
                -fx-padding: 10 20 10 20;
            ">
                <style>
                    .button:hover {
                        -fx-background-color: #529E70;
                    }
                </style>
            </Button>

            <Button fx:id="btnExit" text="Exit" prefWidth="220" onAction="#handleExit" style="
                -fx-background-color: #3B7A57;
                -fx-text-fill: white;
                -fx-font-size: 18px;
                -fx-font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                -fx-background-radius: 12;
                -fx-border-radius: 12;
                -fx-border-color: #2E5940;
                -fx-border-width: 2;
                -fx-padding: 10 20 10 20;
            ">
                <style>
                    .button:hover {
                        -fx-background-color: #529E70;
                    }
                </style>
            </Button>

         </children>
      </VBox>
   </children>
</StackPane>
