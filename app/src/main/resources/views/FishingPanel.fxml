<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootFishing" managed="false" spacing="10" visible="false" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>
  <children>
    <Label fx:id="fishingPromptLabel" text="Guess the number!" textFill="WHITE"> <font>
        <Font name="JetBrains Mono Regular" size="16.0" />
      </font>
    </Label>
    <Label text="Enter A Number" textFill="WHITE"> <font>
        <Font name="JetBrains Mono Bold" size="20.0" />
      </font>
    </Label>
    <HBox alignment="CENTER_LEFT" spacing="10">
      <children>
        <TextField fx:id="numberInput" maxWidth="150" />
        <Button fx:id="confirmButton" text="OK" />
      </children>
    </HBox>
  </children>
</VBox>